
@{
    ViewBag.Title = "ReporteEstadoDeCuenta";
}


<h2>ReporteEstadoDeCuenta</h2>
<script language="javascript" type="text/javascript">
    function validarSiNumero(numero) {
        if (/^([0-9])*$/.test(numero));
        else {
            alert("El valor " + numero + " no es un número");
            txtDato.value = "";
        }
    }
    function validar() {
        //obteniendo el valor que se puso en el campo text del formulario
        var miCampoTexto = document.getElementById("txtDato").value;
        //la condición
        if (miCampoTexto.length > 15 || /^\s+$/.test(miCampoTexto) || miCampoTexto == "") {
            alert('Ingrese caracteres validos!');
            return false;
        }
        return true;
    }
</script>

@using (Html.BeginForm("RepEstCuenta", "Reportes"))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <label>Ingrese el N° Doc. del paciente: </label>
    <input type="text" id="txtDato" name="txtDato" class="dtp" onChange="validarSiNumero(this.value)" />
    <br />
    <input type="submit" value="Generar Reporte" class="btn btn-primary" onclick="return validar()" />
}


