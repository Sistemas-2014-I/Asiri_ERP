@model Common.MSTt02_piso

    <!--********************************TITULO*******************************-->

    <div class="page-title">
        <div>
            <h1><i class="fa fa-user"></i>Piso</h1>
            <p>Crear Piso ...!</p>
        </div>
        <div>
            <ul class="breadcrumb">
                <li><i class="fa fa-home fa-lg"></i></li>
                <li><a href="index.html">Maestro</a></li>
                <li>Piso</li>
            </ul>
        </div>
    </div>
    <!--********************************FIN TITULO*******************************-->

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <!--CODIGO MODIFICAR-->
            <div class="col-lg-12">
                <div class="card col-lg-12">
                    <!--*********************************************AQUÍ MODIFICAR CARD***************************-->
                    <!--*********************************************CARD***************************-->
                    <!--****CITA****-->
                    <h3 class="card-title">Editar Piso</h3>

                    <div class="" id="tabs">
 
                            <div class="container">
                                <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                                    <div class="row">
                                        <div class="col-lg-10">
                                            <div class="card-content">
                                                
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                @Html.HiddenFor(model => model.idPiso)

                                                <div class="form-group">
                                                    @Html.Label("Número:")
                                                    @Html.EditorFor(model => model.numPiso, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresar el número del piso" } })
                                                    @Html.ValidationMessageFor(model => model.numPiso, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">
                                                    @Html.Label("Observación:")
                                                    @Html.TextAreaFor(model => model.obsvPiso, new { @class = "form-control", @placeholder = "Ingresar Observación" })
                                                    @Html.ValidationMessageFor(model => model.obsvPiso, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
            
                    </div>
                </div>
            </div>
            <div class="col-md-12" style="text-align: center;">
                <div class="card">
                    <div class="card-body">
                        <form class="form-inline">
                            <div class="row">;
                                <div class="col-md-12">
                                    <button class="btn btn-success icon-btn" type="submit">
                                        <i class="fa fa-fw fa-lg fa-repeat">
                                        </i>Actualizar
                                    </button>&nbsp;&nbsp;&nbsp;
                                    <a class="btn btn-default icon-btn" href="@Url.Action("Index")">
                                        <i class="fa fa-fw fa-lg fa-times-circle"></i>Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
@section scripts
{
    <script src="~/Scripts/jquery.alphanum.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#numPiso').numeric({ allowMinus: false, max: 20, maxDecimalPlaces: 0, allowThouSep: false, allowDecSep: false, min : 0});
    </script>
}