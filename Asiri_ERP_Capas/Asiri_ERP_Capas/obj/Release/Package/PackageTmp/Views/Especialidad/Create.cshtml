@model Common.RHUt04_especialidad

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>



    <style>
        .borde1 {
            border: 1px #000 solid;
            text-align: center;
        }

        .borde {
            border: 1px #000fff solid;
        }

        .borde2 {
            border: 1px #295ba7 solid;
            text-align: center;
        }

        .action {
            float: right;
        }
    </style>
</head>
<body class="sidebar-mini fixed">



    <!--********************************TITULO*******************************-->

    <div class="page-title">
        <div>
            <h1><i class="fa fa-user"></i>Especialidad</h1>
            <p>Crear Especialidad...!</p>
        </div>
        <div>
            <ul class="breadcrumb">
                <li><i class="fa fa-home fa-lg"></i></li>
                <li><a href="index.html">RR.HH</a></li>
                <li>Especialidad</li>
            </ul>
        </div>
    </div>
    <!--********************************FIN TITULO*******************************-->

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <!--CODIGO MODIFICAR-->
            <div class="col-lg-12">
                <div class="card col-lg-12">
                    <!--*********************************************AQUÍ MODIFICAR CARD***************************-->
                    <!--*********************************************CARD***************************-->
                    <!--****CITA****-->
                    <h3 class="card-title">Nueva Especialidad</h3>

                    <div class="row">
                        <div class="col-lg-10">
                            <div class="card-content">

                                @Html.HiddenFor(x => x.idUsuario)
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.LabelFor(model => model.nombreEspecialidad, htmlAttributes: new { @class = "control-label" })

                                    @Html.EditorFor(model => model.nombreEspecialidad, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.nombreEspecialidad, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.abrvEspecialidad, htmlAttributes: new { @class = "control-label" })

                                    @Html.EditorFor(model => model.abrvEspecialidad, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.abrvEspecialidad, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.idTipoDeEspeciliadad, "idTipoDeEspeciliadad", htmlAttributes: new { @class = "control-label" })

                                    @Html.DropDownList("idTipoDeEspeciliadad",null,"Seleccione", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.idTipoDeEspeciliadad, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-12" style="text-align: center;">
                <div class="card">
                    <div class="card-body">
                        <form class="form-inline">
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-primary icon-btn" type="submit">
                                        <i class="fa fa-fw fa-lg fa-check">
                                        </i>Registrar
                                    </button>&nbsp;&nbsp;&nbsp;
                                    <a class="btn btn-default icon-btn" href="@Url.Action("Index")">
                                        <i class="fa fa-fw fa-lg fa-times-circle"></i>Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <script type="text/javascript" src="~/Scripts/jquery.alphanum.js"></script>
    <script>
        $("#nombreEspecialidad").alphanum({
            allowSpace: true,
            allowNewline: false,
            allowNumeric: false,
            allowUpper: true,
            allowLower: true,
            allowLatin: true,
            maxLength: 150
        });
        $("#abrvEspecialidad").alphanum({
            allowSpace: true,
            allowNewline: false,
            allowNumeric: false,
            allowUpper: true,
            allowLower: true,
            allowLatin: true,
            maxLength: 150
        });
    </script>
</body>
</html>