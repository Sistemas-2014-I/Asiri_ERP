    <style>
        * {
        }

        #agenda {
            width: 100%;
            margin: 0px auto;
        }

            #agenda div {
                width: 300px;
                height: 100%;
                display: table-cell;
                margin: 0px auto;
                padding: 20px 20px 20px 20px;
            }

        button {
            width: 200px;
            display: block;
            margin: 0 auto;
            margin-top: 10px;
        }
    </style>
    <script>

        $(document).ready(function () {
            var id = document.getElementById("idEmpleado").value;

            // page is now ready, initialize the calendar...
            var sourceFullView = { url: '/Cita/MostrarHorario/' + id };
            var eventsLoaded = false;


            $('#calendar').fullCalendar({
                locale: 'es',
                firstDay: 1,
                slotMinutes: 15,
                columnFormat: 'dddd, D  MMMM YYYY',

                header: {
                    left: '',
                    center: 'prev    next',
                    right: '',

                },
                slotEventOverlap: false,
                slotLabelFormat: 'hh:mm a',
                minTime: '06:00:00',
                maxTime: '30:00:00',
                customButtons: {
                    buttonFecha: {
                        text: '8 AM - 10 PM',
                        click: function () {
                            alert('clicked the custom button!');
                        }
                    }
                },
                allDaySlot: false,
                slotDuration: '00:05:00',
                height: 'auto',
                defaultView: 'AgendaFiveDay',
                views: {
                    AgendaFiveDay: {
                        type: 'agenda',
                        color: '#ACBD21',
                        duration: { days: 7 },
                        buttonText: '7 days'
                    }
                },
                events: '/Cita/MostrarHorario/' + id,
                eventColor: '#47B6E9',
                eventBorderColor: '#218CBD',

            });



        });
        $('#boton').click(function () {
            $.ajax({
                type: 'POST',
                url: "/Cita/ListarCitasCalendar",
                success: function (response) {
                    if (response == 'True') {
                        $('#calendar').fullCalendar('refetchEvents');
                        alert('Database populated! ');
                    }
                    else {
                        alert('Error, could not populate database!');
                    }
                }
            });
        });
