@model Common.PROt02_producto

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" data-target="#_DtModalProduct" class="close" data-dismiss="modal">&times;</button>
            <h3 class="modal-title">Detalle de Producto</h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h4>@Html.DisplayNameFor(x => x.codProducto)</h4>
                    </div>
                    <div class="col-md-6">
                        <h4>@Html.DisplayFor(x => x.codProducto)</h4>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h4>@Html.DisplayNameFor(x => x.codBarra)</h4>
                    </div>
                    <div class="col-md-6">
                        <h4>@Html.DisplayFor(x => x.codBarra)</h4>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h4>@Html.DisplayNameFor(x => x.nombreProductoComercial)</h4>
                    </div>
                    <div class="col-md-6">
                        <h4>@Html.DisplayFor(x => x.nombreProductoComercial)</h4>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h4>@Html.DisplayNameFor(x => x.nombreProductoGenerico)</h4>
                    </div>
                    <div class="col-md-6">
                        <h4>@Html.DisplayFor(x => x.nombreProductoGenerico)</h4>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h4>@Html.DisplayNameFor(x => x.descProducto)</h4>
                    </div>
                    <div class="col-md-6">
                        <h4>@Html.DisplayFor(x => x.descProducto)</h4>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h4>@Html.DisplayNameFor(x => x.obsvProducto)</h4>
                    </div>
                    <div class="col-md-6">
                        <h4>@Html.DisplayFor(x => x.obsvProducto)</h4>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h4>@Html.DisplayNameFor(x => x.activo)</h4>
                    </div>
                    <div class="col-md-6">

                        @{string estado = Model.activo ? "Activado" : "Desactivado";}
                        <h4>
                            @estado
