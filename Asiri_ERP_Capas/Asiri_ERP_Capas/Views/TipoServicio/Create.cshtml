@model Common.PROt05_tipoDeServicio
@{
    ViewBag.Title = "Registrar Tipo de servicio";
}
<div class="col-lg-12">
    <div class="page-title">
        <div>
            <h1><i class="fa fa-edit"></i>Registro tipo de servicio</h1>
            <p>Registrar tipo de servicio ..!</p>
        </div>
        <ul class="breadcrumb">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li>
                <a href="@Url.Action("Index")">
                    Tipos de servicios
                </a>
            </li>
            <li>
                <a href="@Url.Action("Create")">
                    Registrar
                </a>
            </li>
        </ul>
    </div>

    <!--*****************REGISTRO PRODUCTO*******************-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <h3 class="card-title">Nuevo Tipo de Servicio</h3>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="cold-lg-12">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.descTipoDeServicio,  new { @class = "control-label"})
                                @Html.TextAreaFor(model => model.descTipoDeServicio, new { @class = "form-control" } )
                                @Html.ValidationMessageFor(model => model.descTipoDeServicio, "", new { @class = "text-danger" })
                            </div>
                            <div class="clearfix"></div>
                            <!--Botones-->
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <button class="btn btn-primary icon-btn" type="submit">
                                        <i class="fa fa-fw fa-lg fa-check">
                                        </i>Registrar
                                    </button>
                                    <a class="btn btn-default icon-btn" href="@Url.Action("Index")">
                                        <i class="fa fa-fw fa-lg fa-times-circle"></i>Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>