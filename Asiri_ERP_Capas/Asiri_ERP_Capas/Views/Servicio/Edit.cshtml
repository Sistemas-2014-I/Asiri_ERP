@model Common.PROt04_servicio

@{
    ViewBag.Title = "Editar Servicio";
}
<div class="page-title">
    <div>
        <h1><i class="fa fa-edit"></i>Edición de Servicio</h1>
        <p>Editar servicio...!</p>
    </div>
    <ul class="breadcrumb">
        <li><i class="fa fa-home fa-lg"></i></li>
        <li>
            <a href="@Url.Action("Index")">
                Servicios
            </a>
        </li>
        <li>
            <a href="@Url.Action("Edit", new { id = Model.idServicio})">
                Editar
            </a>
        </li>
    </ul>
</div>

@using (Html.BeginForm("Edit","Servicio",FormMethod.Post, new { id = "FormEditService"}))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <h3 class="card-title"></h3>
                <div class="card-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.idServicio)  
                    @Html.HiddenFor(x=>x.fecRegistro)
                    @Html.HiddenFor(x=>x.idUsuario)
                    @Html.HiddenFor(x=>x.fecEliminacion)
                    @Html.HiddenFor(x=>x.idUsuarioEliminar)
                    @Html.HiddenFor(x=>x.codServicio)
                    <div class="cold-lg-12">
                        <div class="form-group">
                            <label class="control-label">Código de producto</label>
                            <input class="form-control text-box single-line" value="@ViewBag.codServicio" disabled>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.nombreServicio, new {@class = "control-label"})
                            @Html.EditorFor(model => model.nombreServicio, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.nombreServicio, "", new {@class = "text-danger"})
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.descServicio, new {@class = "control-label"})
                            @Html.TextAreaFor(model => model.descServicio, new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.descServicio, "", new {@class = "text-danger"})
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.precio, new {@class = "control-label"})
                            @Html.EditorFor(model => model.precio, new {htmlAttributes = new {@class = "form-control", @type = "number"} })
                            @Html.ValidationMessageFor(model => model.precio, "", new {@class = "text-danger"})
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.precioMinimo, new {@class = "control-label"})
                            @Html.EditorFor(model => model.precioMinimo, new {htmlAttributes = new {@class = "form-control", @type = "number" } })
                            @Html.ValidationMessageFor(model => model.precioMinimo, "", new {@class = "text-danger"})
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.precioMaximo, new {@class = "control-label"})
                            @Html.EditorFor(model => model.precioMaximo, new {htmlAttributes = new {@class = "form-control", @type = "number" } })
                            @Html.ValidationMessageFor(model => model.precioMaximo, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.esGratis, new {@class = "control-label"})
                            <div class="checkbox">
                            </div>
                            <div class="toggle-flip">
                                <label>
                                    @{ string evalg = Model.esGratis ? "checked" : null;}
                                    <input checked="@evalg" data-val="true" data-val-required="El estado es obligatorio" id="esGratis" name="esGratis" type="checkbox" value="true">
                                    <span class="flip-indecator" data-toggle-on="SI" data-toggle-off="NO"></span>
                                    @Html.ValidationMessageFor(model => model.esGratis, "", new {@class = "text-danger"})
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.activo, new {@class = "control-label"})
                            <div class="checkbox">
                            </div>
                            <div class="toggle-flip">
                                <label>
                                    @{ string eval = Model.activo ? "checked" : null;}
                                    <input checked="@eval" data-val="true" data-val-required="El estado es obligatorio" id="activo" name="activo" type="checkbox" value="true">
                                    <span class="flip-indecator" data-toggle-on="ON" data-toggle-off="OFF"></span>
                                    @Html.ValidationMessageFor(model => model.activo, "", new {@class = "text-danger"})
                                </label>
                            </div>
                        </div>
                        <div class="form-group" style="margin-bottom: 6rem">
                            <div class="card-body">
                                @Html.LabelFor(model => model.idTipoDeServicio, "Tipo de Servicio", new {@class = "control-label"})
                                <div class="clearfix"></div>
                                <div class="col-md-4">
                                    @Html.DropDownList("idTipoDeServicio", null, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(model => model.idTipoDeServicio, "", new {@class = "text-danger"})
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            <div class="card-body">
                                @Html.LabelFor(model => model.idEspecialidad, "Especialidad", new {@class = "control-label"})
                                <div class="clearfix"></div>
                                <div class="col-md-4">
                                    @Html.DropDownList("idEspecialidad", null, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(model => model.idEspecialidad, "", new {@class = "text-danger"})
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12" style="text-align: center;">
            <div class="card">  
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-success icon-btn" id="btnEditService" type="submit">
                                <i class="fa fa-fw fa-lg fa-repeat">
                                </i>Actualizar</button>
                            <a class="btn btn-default icon-btn" href="@Url.Action("Index")">
                                <i class="fa fa-fw fa-lg fa-times-circle"></i>Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    <script src="~/Scripts/Plugins/select2.min.js"></script>
    <script type="text/javascript">
        $('#idTipoDeServicio').select2();
        $('#idEspecialidad').select2();


     </script>
    @Scripts.Render("~/bundles/jqueryval")
}