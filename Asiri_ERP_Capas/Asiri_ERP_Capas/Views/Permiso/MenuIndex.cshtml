@model IEnumerable<Common.Menu>

@{
    ViewBag.Title = "MenuIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MenuIndex</h2>

<p>
    @Html.ActionLink("Crear", "MenuCreate")
</p>
<p>
    @Html.ActionLink("Permisos", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentMenuID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MenuURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MenuIcon)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentMenuID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuIcon)
            </td>
            <td>
                @Html.ActionLink("Edit", "MenuEdit", new { id = item.MenuID }) |
                @Html.ActionLink("Details", "MenuDetails", new { id = item.MenuID }) |
                @Html.ActionLink("Delete", "MenuDelete", new { id = item.MenuID })
            </td>
        </tr>
    }

</table>
