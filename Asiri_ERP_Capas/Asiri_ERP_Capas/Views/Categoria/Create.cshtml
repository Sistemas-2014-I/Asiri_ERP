@using Helpers
@model Common.PROt01_categoria

@{
    ViewBag.Title = "Registrar categoría";
}

<div class="col-lg-12">
    <div class="page-title">
        <div>
            <h1><i class="fa fa-edit"></i>Registro categoria de productos</h1>
            <p>Registrar categoría..!</p>
        </div>
        <ul class="breadcrumb">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li>
                <a href="@Url.Action("Index")">
                    Categorias
                </a>
            </li>
            <li>
                <a href="@Url.Action("Create")">
                    Crear
                </a>
            </li>
        </ul>
    </div>

    <!--*****************REGISTRO PRODUCTO*******************-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <h3 class="card-title">Nueva Categoría</h3>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="cold-lg-12">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.nombreCategoria,  new { @class = "control-label" })
                                @Html.EditorFor(model => model.nombreCategoria, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre del tipo de servicio" } })
                                @Html.ValidationMessageFor(model => model.nombreCategoria, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.descCategoria,  new { @class = "control-label" })
                                @Html.TextAreaFor(model => model.descCategoria,  new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.descCategoria, "", new { @class = "text-danger" })
                            </div>
                            <div class="clearfix"></div>
                            <!--Botones-->
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <button class="btn btn-primary icon-btn" type="submit">
                                        <i class="fa fa-fw fa-lg fa-check">
                                        </i>Registrar
                                    </button>&nbsp;&nbsp;&nbsp;
                                    <a class="btn btn-default icon-btn" href="@Url.Action("Index")">
                                        <i class="fa fa-fw fa-lg fa-times-circle"></i>Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>